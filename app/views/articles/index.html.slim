- @articles.each do |article|
  p = link_to article.title, user_article_path(@user, article)
  - if current_user == @user
    = link_to '[edit]', edit_user_article_path(current_user, article)
    = link_to '[destroy]', user_article_path(current_user, article), method: :delete, data: { confirm: 'Are you sure?' }
